{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "ServerOptions": {
    "AddServerHeader": false
  },
  "ReverseProxy": {
    "Listen": {
      "http": {
        "Protocols": [ "Http1", "Http2", "Http3" ],
        "Address": [ "*:5001" ],
        "UseSni": true,
        "SniId": "localhost"
      },
      "udptest": {
        "Protocols": [ "Udp" ],
        "Address": [ "*:5000" ],
        "RouteId": "udpTest"
      },
      "tcptest": {
        "Protocols": [ "Tcp" ],
        "Address": [ "*:5000" ],
        "RouteId": "tcpTest"
      },
      "tcptest2": {
        "Protocols": [ "Tcp" ],
        "Address": [ "*:5002" ],
        "UseSni": true
      }
    },
    "Sni": {
      "localhost": {
        "Host": [ "*" ],
        "CheckCertificateRevocation": false,
        "Certificate": {
          "Path": "testCert.pfx",
          "Password": "testPassword"
        }
      },
      "sniPassthroughTest": {
        "Host": [ "*com" ],
        "Passthrough": true,
        "RouteId": "tcpTest"
      },
      "sniTest": {
        "Host": [ "*org" ],
        "CheckCertificateRevocation": false,
        "Certificate": {
          "Path": "testCert.pfx",
          "Password": "testPassword"
        },
        "RouteId": "tcpTest"
      }
    },
    "Routes": {
      "udpTest": {
        "ClusterId": "udpTest",
        "RetryCount": 1,
        "UdpResponses": 1,
        "Timeout": "00:00:11"
      },
      "tcpTest": {
        "ClusterId": "apidemo",
        "Timeout": "00:10:11"
      }
    },
    "Clusters": {
      "udpTest": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": {
            "Enable": true
          }
        },
        "Destinations": [
          {
            "Address": "127.0.0.1:11000"
          }
        ]
      },
      "apidemo": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enable": false,
            "Policy": "Connect"
          }
        },
        "Destinations": [
          {
            "Address": "https://google.com"
          }
        ]
      }
    }
  }
}