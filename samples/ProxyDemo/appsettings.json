{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "ServerOptions": {
    "AddServerHeader": false
  },
  "ReverseProxy": {
    "Listen": {
      "http": {
        "Protocols": [ "Http1", "Http2", "Http3" ],
        "Address": [ "*:5001" ],
        "UseSni": true,
        "CheckCertificateRevocation": false,
        "SniId": "localhost"
      },
      "udptest": {
        "Protocols": [ "Udp" ],
        "Address": [ "*:5000" ],
        "RouteId": "udpTest"
      }
    },
    "Sni": {
      "localhost": {
        "Host": [ "*" ],
        "Tls": {
          "Path": "testCert.pfx",
          "Password": "testPassword"
        }
      }
    },
    "Routes": {
      "udpTest": {
        "ClusterId": "udpTest",
        "RetryCount": 1,
        "UdpResponses": 1,
        "Timeout": "00:00:11"
      }
    },
    "Clusters": {
      "udpTest": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Passive": {
            "Enable": true
          }
        },
        "Destinations": [
          {
            "Address": "127.0.0.1:11000"
          }
        ]
      }
    }
  }
}